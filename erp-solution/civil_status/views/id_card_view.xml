<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="civil_status_id_card_view_form" model="ir.ui.view" >
            <field name="name">civil.status.id.card.view.form</field>
            <field name="model">id.card</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="id_card_number" placeholder="ID Card Number" required="True" />
                            </h1>
                        </div>
                        <group name="citizen_id_card_info_based">
                            <group>
                                <field name="date_of_issue" />
                                <field name="date_of_change" />
                            </group>                     
                            <group>
                                <field name="card_type_id" />
                                <field name="place_id" />
                            </group>                     
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>
