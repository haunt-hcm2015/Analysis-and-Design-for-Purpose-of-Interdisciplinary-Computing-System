<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="construction_view_form" model="ir.ui.view" >
            <field name="name">construction.view.form</field>
            <field name="model">construction</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="images">
                            <group>
                                <field name="product_tmpl_id" domain="[('is_constructor', '=', True)]"/>
                                <field name="product_id"      domain="[('product_tmpl_id', '=', product_tmpl_id)]"/>
                                <field name="product_qty"/>
                            </group>                     
                        </group>
                        <notebook>
                            <page name="Components" string="Components">
                                <field name="component_line_ids">
                                    <tree string="Components" editable="bottom">
                                        <field name="product_id" domain="['|',('is_constructor', '=', True),('is_component', '=', True) ]"/>
                                        <field name="component_type"/>
                                        <field name="product_qty"/>
                                        <field name="volume" attrs="{'invisible':['|',('component_type','=','human'), ('component_type','=','machine')]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="construction_view_tree" model="ir.ui.view">
            <field name="name">construction.view.tree</field>
            <field name="model">construction</field>
            <field name="arch" type="xml">
                <tree string="Construction">
                    <field name="product_tmpl_id" />
                    <field name="product_id" />                   
                    <field name="product_qty" />
                </tree>
            </field>
        </record>
        <record id="construction_action" model="ir.actions.act_window">
            <field name="name">Construction Management</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">construction</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('construction_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('construction_view_form')})]"/>
        </record>
        <menuitem id="construction_menu"
            name="Construction Management"/>
        <menuitem id="construction_menu_bill_of_material" 
            parent="construction_menu" 
            name="Bills of Materials" 
            action="construction_action"
            groups="base.group_user" />
    </data>
</odoo>
